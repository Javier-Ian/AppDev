<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivWorkoutTypeIcon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/circle_background"
            android:padding="12dp"
            android:src="@drawable/ic_fitness"
            app:tint="@color/white" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvWorkoutName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Full Body Workout" />

            <TextView
                android:id="@+id/tvWorkoutType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/darkGray"
                android:textSize="14sp"
                tools:text="Strength Training" />

            <TextView
                android:id="@+id/tvWorkoutTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/darkGray"
                android:textSize="14sp"
                tools:text="Monday, 9:00 AM" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    app:drawableStartCompat="@drawable/ic_clock"
                    app:drawableTint="@color/primaryColor"
                    tools:text="45 min" />

                <TextView
                    android:id="@+id/tvCalories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    app:drawableStartCompat="@drawable/ic_calories"
                    app:drawableTint="@color/primaryColor"
                    tools:text="320 cal" />

                <TextView
                    android:id="@+id/tvExerciseCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    app:drawableStartCompat="@drawable/ic_exercise"
                    app:drawableTint="@color/primaryColor"
                    tools:text="8 exercises" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressWorkout"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:progressTint="@color/primaryColor"
                tools:progress="75" />

            <TextView
                android:id="@+id/tvProgressPercentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="75% Complete" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView> 