<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FLEXTRACK SIMPLE TEST"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:background="#E0E0E0"
        android:padding="16dp"/>

    <!-- Account Info (simplified) -->
    <TextView
        android:id="@+id/user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email: test@example.com"
        android:textSize="18sp"
        android:padding="16dp"
        android:background="#F5F5F5"
        android:layout_marginBottom="16dp"/>

    <!-- SECTION 1: Step Counter -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SECTION 1: STEP COUNTER"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="#4CAF50"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:layout_marginBottom="8dp"/>
        
    <TextView
        android:id="@+id/step_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Steps: 5,243"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="8dp"/>

    <ProgressBar
        android:id="@+id/step_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:progress="50"
        android:layout_marginBottom="8dp"/>
        
    <TextView
        android:id="@+id/step_goal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Goal: 10,000 steps"
        android:textSize="18sp"
        android:gravity="end"
        android:layout_marginBottom="24dp"/>

    <!-- SECTION 2: Today's Workout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SECTION 2: TODAY'S WORKOUT"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="#2196F3"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:layout_marginBottom="8dp"/>
        
    <Button
        android:id="@+id/home_workout_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VIEW TODAY'S WORKOUT"
        android:textSize="18sp"
        android:padding="16dp"
        android:layout_marginBottom="16dp"/>
        
    <TextView
        android:id="@+id/workout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upper Body Strength"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"/>
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp"
        android:visibility="gone">
            
        <TextView
            android:id="@+id/workout_exercises_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="8 exercises"/>
            
        <TextView
            android:id="@+id/workout_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration: 45 minutes"/>
    </LinearLayout>

    <!-- SECTION 3: Before/After Photos -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SECTION 3: PROGRESS PHOTOS"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="#FF5722"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:layout_marginBottom="8dp"/>
        
    <Button
        android:id="@+id/before_after_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UPLOAD BEFORE/AFTER PHOTOS"
        android:textSize="18sp"
        android:padding="16dp"
        android:layout_marginBottom="24dp"/>

    <!-- Required for Firebase data (hidden) -->
    <TextView
        android:id="@+id/name_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/age_text" 
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/gender_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/height_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/weight_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/bmi_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/bmi_category_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/fitness_goal_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/fitness_level_text"
        android:layout_width="0dp" 
        android:layout_height="0dp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/before_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/after_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>
        
    <!-- Navigation buttons -->
    <Button
        android:id="@+id/view_workout_plan_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Workout Plan"
        android:layout_marginBottom="8dp"/>
        
    <Button
        android:id="@+id/edit_profile_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:layout_marginBottom="8dp"/>
        
    <Button
        android:id="@+id/sign_out_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Out"/>
</LinearLayout> 